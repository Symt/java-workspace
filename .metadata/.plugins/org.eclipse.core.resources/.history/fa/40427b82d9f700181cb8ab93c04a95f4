package main;

import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

import javax.swing.JFrame;

public class Test extends JFrame {
	public Test(KeyListener key) {
		addKeyListener(key);
		setSize(500,500);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLocationRelativeTo(null);
		setVisible(true);
	}
	static boolean click = false;
	public static void main(String[] args) {
		long tempTime = 0;
		boolean paused = false;
		boolean going = true;
		KeyListener key = new KeyListener() {

			@Override
			public void keyPressed(KeyEvent arg0) {
			}

			@Override
			public void keyReleased(KeyEvent arg0) {
				click = true;
			}

			@Override
			public void keyTyped(KeyEvent arg0) {
			}
			
		};
		new Test(key);
		int count = 0;
		long startTime = System.currentTimeMillis();
		long endTime = System.currentTimeMillis()+2900;
		while ((endTime - startTime) >= 0) {
			System.out.println("Time Left: " + (endTime - startTime));
			if (click) {
				System.out.println("Okay");
				paused = (paused) ? false : true;
				going = (going) ? false : true;
				click = false;
				count = 0;
			}
			if (paused && count == 0) {
				tempTime = endTime - startTime;
				count = 1;
				System.out.println("Stop motor");
			} else if (going) {
				endTime = System.currentTimeMillis() + tempTime;
				startTime = System.currentTimeMillis();
				going = false;
				System.out.println("Start motor");
			}
			
			if (!paused) {
				startTime = System.currentTimeMillis();
			}
		}
	}
}
